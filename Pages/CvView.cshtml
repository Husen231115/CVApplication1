@page
@model WebApplication9.Pages.CvViewModel
@{
    ViewData["Title"] = "CV-FORM";
}
@* <div asp-validation-summary="All"></div> *@
<h1 style="text-align:center; color:darkblue">CV form</h1>
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Input.FirstName"></label>
        <input class="form-control" name="FirstName" asp-for="Input.FirstName" />
       
        <span asp-validation-for="Input.FirstName" data-valmsg-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.LastName"></label>
        <input class="form-control" name="LastName" asp-for="Input.LastName" />
        <span asp-validation-for="Input.LastName" data-valmsg-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input class="form-control" name="Email" asp-for="Input.Email" />
        <span asp-validation-for="Input.Email" data-valmsg-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.EmailCon"></label>
        <input class="form-control" name="EmailCon" asp-for="Input.EmailCon" />
        <span asp-validation-for="Input.EmailCon" data-valmsg-for="EmailCon" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password"></label>
        <input class="form-control" name="Password" asp-for="Input.Password" type="password" />
        <span asp-validation-for="Input.Password" data-valmsg-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.PhoneNumber"></label>
        <input class="form-control" name="PhoneNumber" asp-for="Input.PhoneNumber" />
        <span asp-validation-for="Input.PhoneNumber" data-valmsg-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Birthday"></label>
        <input class="form-control" name="Birthday" asp-for="Input.Birthday" type="date" />
        <span asp-validation-for="Input.Birthday" data-valmsg-for="Birthday" class="text-danger"></span>
    </div>  
    <div class="form-group">
        <label asp-for="Input.Sex">Sex:</label>
        <div class="form-check form-check-inline">
            <input class="form-check-input" name="Sex" asp-for="Input.Sex" type="radio" value="Male" />
            <label class="form-check-label" asp-for="Input.Sex">Male</label>
            <span asp-validation-for="Input.Sex" data-valmsg-for="Sex"  class="text-danger"></span>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" name="Sex" asp-for="Input.Sex" type="radio" value="Female" />
            <label class="form-check-label" asp-for="Input.Sex">Female</label>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Input.Nationality"></label>
        <select class="form-control" name="Nationality" asp-for="Input.Nationality" asp-items="Model.Items"></select>
        <span asp-validation-for="Input.Nationality" data-valmsg-for="Nationality" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Skills">Skills:</label>
        @foreach (var skill in Model.Skills)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="@($"skill_{skill}")" name="Skills" value="@skill" />
                <label class="form-check-label" for="@($"skill_{skill}")">@skill</label>
            </div>
        }
        <span asp-validation-for="Input.Skills" data-valmsg-for="Skills" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Photo"></label>
        <input class="form-control-file" name="Photo" asp-for="Input.Photo" type="file" />
        <span asp-validation-for="Input.Photo" data-valmsg-for="Photo" class="text-danger"></span>
    </div>
    <button style="margin-top:2em;" type="submit" class="btn btn-primary">Submit</button>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</form>
